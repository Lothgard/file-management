<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xaviertconcepcion.filemanagement.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_mnt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Status here"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/lbl_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Path: " />

        <TextView
            android:id="@+id/lbl_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: " />

        <Button
            android:id="@+id/btn_mount_obb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mount OBB" />
        
        <TextView
            android:id="@+id/lbl_mount_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_unmount_obb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unmount OBB" />

        <Button
            android:id="@+id/btn_read_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read Files from Mounted OBB" />

        <TextView
            android:id="@+id/lbl_filelist_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Files" />

        <Button
            android:id="@+id/btn_read_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read Db" />

        <TextView
            android:id="@+id/lbl_db_rows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Db Rows" />

    </LinearLayout>

</ScrollView>
